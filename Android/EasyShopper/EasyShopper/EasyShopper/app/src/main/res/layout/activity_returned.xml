<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.projects.chrisfowler.easyshopper.Returned">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageOfITem"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wallmartRadioBtn"
        android:id="@+id/wallmartCheckBoxReturned"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/imageOfITem"
        android:layout_alignEnd="@+id/imageOfITem"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopko"
        android:id="@+id/shopkoCheckBoxReturned"
        android:layout_below="@+id/wallmartCheckBoxReturned"
        android:layout_alignLeft="@+id/wallmartCheckBoxReturned"
        android:layout_alignStart="@+id/wallmartCheckBoxReturned"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/superSaverRadioBtn"
        android:id="@+id/superSaverCheckBoxReturned"
        android:layout_below="@+id/shopkoCheckBoxReturned"
        android:layout_alignLeft="@+id/shopkoCheckBoxReturned"
        android:layout_alignStart="@+id/shopkoCheckBoxReturned"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hy-Vee"
        android:id="@+id/hyVeeCheckBoxReturned"
        android:layout_below="@+id/superSaverCheckBoxReturned"
        android:layout_alignLeft="@+id/superSaverCheckBoxReturned"
        android:layout_alignStart="@+id/superSaverCheckBoxReturned"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select price to add to the cart"
        android:id="@+id/textView3"
        android:layout_below="@+id/hyVeeCheckBoxReturned"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addToCartBtn"
        android:id="@+id/addToCartButton"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancelBtn"
        android:id="@+id/cancelButton"
        android:layout_below="@+id/addToCartButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
